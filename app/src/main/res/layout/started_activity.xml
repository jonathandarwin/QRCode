<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="dot1"
            type="int"/>

        <variable
            name="dot2"
            type="int"/>

        <variable
            name="dot3"
            type="int"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_30dp"
            >

            <View
                android:id="@+id/dot1"
                android:layout_height="@dimen/common_10dp"
                android:layout_width="@dimen/common_10dp"
                android:background="@drawable/slider_dot"
                android:layout_margin="@dimen/common_10dp"
                android:backgroundTint="@{dot1}"
                />

            <View
                android:id="@+id/dot2"
                android:layout_height="@dimen/common_10dp"
                android:layout_width="@dimen/common_10dp"
                android:background="@drawable/slider_dot"
                android:layout_margin="@dimen/common_10dp"
                android:backgroundTint="@{dot2}"
                />

            <View
                android:id="@+id/dot3"
                android:layout_height="@dimen/common_10dp"
                android:layout_width="@dimen/common_10dp"
                android:background="@drawable/slider_dot"
                android:layout_margin="@dimen/common_10dp"
                android:backgroundTint="@{dot3}"
                />
        </LinearLayout>

    </RelativeLayout>

</layout>